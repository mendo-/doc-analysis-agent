{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current Test",
            "type": "python",
            "request": "launch",
            "purpose": ["debug-test"],
            "module": "pytest",
            "args": [
                "${file}",
                "-v",
                "-s"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "python": "${workspaceFolder}/.venv/bin/python",
            "justMyCode": false
        },
        {
            "name": "Debug Single Test Function",
            "type": "python",
            "request": "launch",
            "purpose": ["debug-test"],
            "module": "pytest",
            "args": [
                "${file}::${selectedText}",
                "-v",
                "-s"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "python": "${workspaceFolder}/.venv/bin/python",
            "justMyCode": false
        }
    ]
} 